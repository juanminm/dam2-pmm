<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.institutoserpis.juanminm.listasimple.MainActivity">

    <Button
        android:id="@+id/activity_main_btn_to_my_lista_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A MyListaSimple"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/activity_main_btn_to_my_spinner_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A MySpinnerSimple"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_btn_to_my_lista_simple"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
