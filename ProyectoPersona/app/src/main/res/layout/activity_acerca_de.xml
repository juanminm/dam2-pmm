<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.institutoserpis.juanminm.proyectopersona.AcercaDeActivity">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/activity_acercade_acercade"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="Acerca de Blablabla"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/activity_acercade_version"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="Version: 1.0"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_acercade_acercade"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/activity_acercade_autores"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="Autores: Juan Miguel"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_acercade_version"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/activity_acercade_codigofuente"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        tools:text="CÃ³digo fuente: https://github.com/juanminm/dam2-pmm"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_acercade_autores"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="7dp"/>

</android.support.constraint.ConstraintLayout>
