<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/row_gender"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        tools:src="@drawable/ic_green"
        android:layout_alignParentEnd="true">
    </ImageView>

    <TextView
        android:id="@+id/row_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        tools:text="Juan Miguel Navarro Martínez"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/row_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_name"
        android:gravity="bottom"
        tools:text="16/07/1993"/>

    <TextView
        android:id="@+id/row_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/row_gender"
        android:layout_toLeftOf="@id/row_gender"
        android:layout_toStartOf="@id/row_gender"
        tools:text="España"/>

    <TextView
        android:id="@+id/row_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/row_nationality"
        android:layout_alignBottom="@+id/row_nationality"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/row_nationality"
        android:layout_toStartOf="@+id/row_nationality"
        tools:text="Valencia" />

</RelativeLayout>
