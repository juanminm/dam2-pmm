<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="org.institutoserpis.juanminm.layoutyradiobuttons.RelativeLayoutActivity">

    <Button
        android:id="@+id/activity_relative_layout_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_relative_layout_btn_3"
        android:layout_marginBottom="23dp"
        android:layout_toLeftOf="@+id/activity_relative_layout_btn_4"
        android:layout_toStartOf="@+id/activity_relative_layout_btn_4"
        android:text="Button 1" />

    <Button
        android:id="@+id/activity_relative_layout_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_relative_layout_btn_1"
        android:layout_alignBottom="@+id/activity_relative_layout_btn_1"
        android:layout_toEndOf="@+id/activity_relative_layout_btn_3"
        android:layout_toRightOf="@+id/activity_relative_layout_btn_3"
        android:text="Button 2" />

    <Button
        android:id="@+id/activity_relative_layout_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_relative_layout_btn_5"
        android:layout_alignEnd="@+id/activity_relative_layout_btn_5"
        android:layout_alignRight="@+id/activity_relative_layout_btn_5"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Button 3" />

    <Button
        android:id="@+id/activity_relative_layout_btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_relative_layout_btn_3"
        android:layout_alignBottom="@+id/activity_relative_layout_btn_3"
        android:layout_alignLeft="@+id/activity_relative_layout_btn_5"
        android:layout_alignStart="@+id/activity_relative_layout_btn_5"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:text="Button 4" />

    <Button
        android:id="@+id/activity_relative_layout_btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="Button 5" />

</RelativeLayout>
